<p id="notice"><%= notice %></p>

<h1>Last 10 TimeLine Tweets</h1>

<table>
  <thead>
    <tr>
      
      <th>TWEETS</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% if current_user %>
        <p class="navbar-text navbar-right">Signed in as <%= current_user.name %></p>
      <% end %>

    <% @tweets.each do |tweet| %>
      <tr>
        <td><%= tweet.body %></td>
        <td><%# link_to 'Show', tweet %></td>
        <td><%# link_to 'Edit', edit_tweet_path(tweet) %></td>
        <td><%# link_to 'Destroy', tweet, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Tweet', new_tweet_path %>
<%= link_to 'Update Timeline', '/auth/twitter/' %>
